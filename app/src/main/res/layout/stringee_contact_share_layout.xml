<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_share_layout"
    android:layout_width="235dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:visibility="gone">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/stringee_transparent_color"
        android:orientation="vertical"
        android:padding="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contact_share_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/stringee_ic_contact_picture" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/contact_share_image">

            <TextView
                android:id="@+id/contact_share_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text=""
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contact_share_tv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_share_tv_name"
                android:layout_marginTop="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/contact_share_emailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_share_tv_no"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/stringee_share_contact_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/contact_share_add_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/stringee_transparent_color"
            android:text="@string/add_contacts" />

        <TextView
            android:id="@+id/contactTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:textColor="#a1aab1"
            android:textSize="11sp" />
    </RelativeLayout>
</LinearLayout>